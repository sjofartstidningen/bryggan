{
  "name": "@sjofartstidningen/bryggan",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://bryggan.sjofartstidningen.se",
  "author": "Adam Bergman <adam@fransvilhelm.com>",
  "engines": {
    "node": ">=12"
  },
  "keywords": [
    "react",
    "cypress",
    "jest"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sjofartstidningen/bryggan.git"
  },
  "scripts": {
    "start": "concurrently 'yarn start:app' 'yarn start:lambda'",
    "start:app": "react-scripts start",
    "start:lambda": "NODE_ENV=development netlify-lambda serve --config webpack.functions.js src/functions",
    "build": "yarn build:app && yarn build:lambda",
    "build:app": "react-scripts build",
    "build:lambda": "NODE_ENV=production netlify-lambda build --config webpack.functions.js src/functions",
    "test": "react-scripts test --env=jest-environment-jsdom-sixteen",
    "lint": "eslint --ext .ts --ext .tsx --ext .js --ext .jsx src cypress",
    "type-check": "tsc --noEmit",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:ci": "start-server-and-test 'yarn start' :3000 'yarn cypress:run'",
    "schema": "yarn schema:download && yarn schema:types",
    "schema:download": "apollo client:download-schema",
    "schema:types": "apollo client:codegen --addTypename --target=typescript --passthroughCustomScalars --customScalarsPrefix=GraphQL_ --localSchemaFile=./schema.json --outputFlat ./src/types/graphql.ts"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.5",
    "@fransvilhelm/hooks": "^2.0.1",
    "@reach/auto-id": "^0.10.2",
    "@reach/combobox": "^0.10.2",
    "@reach/portal": "^0.10.2",
    "@xstate/react": "^0.8.1",
    "apollo": "^2.27.4",
    "apollo-boost": "^0.4.8",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.9",
    "apollo-datasource-rest": "^0.9.0",
    "apollo-server-lambda": "^2.13.1",
    "apollo-utilities": "^1.3.4",
    "axios": "^0.19.0",
    "bufferutil": "^4.0.1",
    "encoding": "^0.1.12",
    "graphql": "^15.0.0",
    "graphql-tag": "^2.10.3",
    "http-errors": "^1.7.3",
    "localforage": "^1.7.3",
    "nanoid": "2",
    "polished": "^3.6.3",
    "preval.macro": "^5.0.0",
    "prop-types": "^15.7.2",
    "qs": "^6.9.4",
    "raf-schd": "^4.0.2",
    "react": "^0.0.0-experimental-33c3af284",
    "react-dom": "^0.0.0-experimental-33c3af284",
    "react-router-dom": "^5.2.0",
    "react-spring": "^8.0.27",
    "strman": "^2.0.1",
    "styled-components": "^5.1.0",
    "universal-cookie": "^4.0.2",
    "utf-8-validate": "^5.0.2",
    "xstate": "^4.9.1"
  },
  "devDependencies": {
    "@apollo/react-testing": "^3.1.4",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@cypress/webpack-preprocessor": "^5.2.0",
    "@iam4x/cypress-graphql-mock": "^0.0.1",
    "@netlify/zip-it-and-ship-it": "^0.3.1",
    "@testing-library/cypress": "^6.0.0",
    "@testing-library/jest-dom": "^5.7.0",
    "@testing-library/react": "^10.0.4",
    "@types/aws-lambda": "^8.10.51",
    "@types/bytes": "^3.1.0",
    "@types/got": "^9.6.10",
    "@types/http-errors": "^1.6.3",
    "@types/jest": "25.2.1",
    "@types/lru-cache": "^5.1.0",
    "@types/nanoid": "^2.1.0",
    "@types/nock": "^11.1.0",
    "@types/node": "14.0.1",
    "@types/preval.macro": "^3.0.0",
    "@types/qs": "^6.9.2",
    "@types/raf-schd": "^4.0.0",
    "@types/reach__combobox": "^0.1.0",
    "@types/react": "16.9.35",
    "@types/react-dom": "16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/strman": "^2.0.0",
    "@types/styled-components": "^5.1.0",
    "@types/testing-library__cypress": "^5.0.5",
    "@types/universal-cookie": "^2.2.0",
    "concurrently": "^5.2.0",
    "cypress": "^4.5.0",
    "cz-conventional-changelog": "^3.2.0",
    "dotenv-webpack": "^1.8.0",
    "husky": "^4.2.5",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-styled-components": "^7.0.2",
    "lint-staged": "^10.2.2",
    "netlify-lambda": "^1.6.0",
    "nock": "^12.0.3",
    "prettier": "^2.0.5",
    "react-scripts": "3.4.1",
    "start-server-and-test": "^1.11.0",
    "ts-loader": "^7.0.4",
    "typescript": "3.9.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.{js,ts,jsx,tsx,json,md,yml,html}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  }
}
