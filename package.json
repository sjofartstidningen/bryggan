{
  "name": "@sjofartstidningen/bryggan",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://bryggan.sjofartstidningen.se",
  "author": "Adam Bergman <adam@fransvilhelm.com>",
  "keywords": [
    "react",
    "cypress",
    "jest"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sjofartstidningen/bryggan.git"
  },
  "scripts": {
    "start": "concurrently 'yarn start:app' 'yarn start:lambda'",
    "start:app": "react-scripts start",
    "start:lambda": "NODE_ENV=development netlify-lambda serve --config webpack.functions.js src/functions",
    "build": "yarn build:app && yarn build:lambda",
    "build:app": "react-scripts build",
    "build:lambda": "NODE_ENV=production netlify-lambda build src/functions",
    "test": "react-scripts test",
    "lint": "eslint --ext .ts --ext .tsx --ext .js --ext .jsx src cypress",
    "type-check": "tsc --noEmit",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:ci": "start-server-and-test 'yarn start' :3000 'yarn cypress:run'",
    "schema": "yarn schema:download && yarn schema:types",
    "schema:download": "apollo client:download-schema",
    "schema:types": "apollo client:codegen --addTypename --target=typescript --passthroughCustomScalars --customScalarsPrefix=GraphQL_ --localSchemaFile=./schema.json --outputFlat ./src/types/graphql.ts"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@fransvilhelm/hooks": "^1.1.0",
    "@reach/auto-id": "^0.8.0",
    "@reach/combobox": "^0.8.0",
    "@reach/portal": "^0.8.0",
    "@xstate/react": "^0.8.1",
    "apollo": "^2.21.1",
    "apollo-boost": "^0.4.4",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-client": "^2.6.4",
    "apollo-datasource-rest": "^0.6.9",
    "apollo-server-lambda": "^2.9.13",
    "apollo-utilities": "^1.3.2",
    "axios": "^0.19.0",
    "bufferutil": "^4.0.1",
    "bytes": "^3.1.0",
    "encoding": "^0.1.12",
    "graphql": "^14.5.8",
    "graphql-tag": "^2.10.1",
    "http-errors": "^1.7.3",
    "localforage": "^1.7.3",
    "lru-cache": "^5.1.1",
    "nanoid": "^2.1.7",
    "polished": "^3.4.2",
    "preval.macro": "^4.0.0",
    "prop-types": "^15.7.2",
    "qs": "^6.9.1",
    "raf-schd": "^4.0.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-spring": "^8.0.27",
    "strman": "^2.0.1",
    "styled-components": "^5.0.1",
    "universal-cookie": "^4.0.2",
    "utf-8-validate": "^5.0.2",
    "xstate": "^4.7.2"
  },
  "devDependencies": {
    "@apollo/react-testing": "^3.1.3",
    "@babel/core": "^7.7.5",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-typescript": "^7.7.4",
    "@cypress/webpack-preprocessor": "^4.1.1",
    "@iam4x/cypress-graphql-mock": "^0.0.1",
    "@testing-library/cypress": "^5.0.2",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^9.3.3",
    "@types/aws-lambda": "^8.10.37",
    "@types/bytes": "^3.1.0",
    "@types/got": "^9.6.9",
    "@types/http-errors": "^1.6.3",
    "@types/jest": "25.1.1",
    "@types/lru-cache": "^5.1.0",
    "@types/nanoid": "^2.1.0",
    "@types/nock": "^11.1.0",
    "@types/node": "13.7.0",
    "@types/preval.macro": "^3.0.0",
    "@types/qs": "^6.9.0",
    "@types/raf-schd": "^4.0.0",
    "@types/reach__combobox": "^0.1.0",
    "@types/react": "16.9.19",
    "@types/react-dom": "16.9.5",
    "@types/react-router-dom": "^5.1.3",
    "@types/styled-components": "^4.4.1",
    "@types/testing-library__cypress": "^5.0.1",
    "@types/universal-cookie": "^2.2.0",
    "concurrently": "^5.0.1",
    "cypress": "^3.8.3",
    "cz-conventional-changelog": "^3.0.2",
    "dotenv-webpack": "^1.7.0",
    "husky": "^4.2.1",
    "jest-styled-components": "^7.0.0",
    "lint-staged": "^10.0.7",
    "netlify-lambda": "^1.6.0",
    "nock": "^11.7.0",
    "prettier": "^1.19.1",
    "react-scripts": "3.3.1",
    "start-server-and-test": "^1.10.6",
    "ts-loader": "^6.2.1",
    "typescript": "3.7.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.{js,ts,jsx,tsx,json,md,yml,html}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  }
}
