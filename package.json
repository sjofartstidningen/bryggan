{
  "name": "@sjofartstidningen/bryggan",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://bryggan.sjofartstidningen.se",
  "author": "Adam Bergman <adam@fransvilhelm.com>",
  "keywords": [
    "react",
    "cypress",
    "jest"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sjofartstidningen/bryggan.git"
  },
  "scripts": {
    "start": "concurrently 'yarn start:app' 'yarn start:lambda'",
    "start:app": "react-scripts start",
    "start:lambda": "NODE_ENV=development netlify-lambda serve --config webpack.functions.js src/functions",
    "build": "yarn build:app && yarn build:lambda",
    "build:app": "react-scripts build",
    "build:lambda": "NODE_ENV=production netlify-lambda build src/functions",
    "test": "react-scripts test",
    "lint": "eslint --ext .ts --ext .tsx --ext .js --ext .jsx src cypress",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:ci": "start-server-and-test 'yarn start' :3000 'yarn cypress:run'",
    "generate:schema": "mv ./apollo.config.js ./_apollo.config.js && apollo service:download --endpoint http://localhost:9000/graphql ./schema.json && mv _apollo.config.js apollo.config.js",
    "generate:types": "apollo client:codegen --addTypename --target=typescript --passthroughCustomScalars --customScalarsPrefix=GraphQL_ --localSchemaFile=./schema.json",
    "generate:types:watch": "npx nodemon --ignore '*/__generated__/*' --watch 'src' -e ts,tsx,js,jsx --exec 'yarn generate:types'",
    "generate": "yarn generate:schema && yarn generate:types"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@fransvilhelm/hooks": "^1.1.0",
    "@reach/combobox": "^0.5.3",
    "@reach/portal": "^0.5.0",
    "@reach/tooltip": "^0.5.4",
    "apollo": "^2.21.0",
    "apollo-boost": "^0.4.4",
    "apollo-client": "^2.6.4",
    "apollo-datasource-rest": "^0.6.6",
    "apollo-server-lambda": "^2.9.9",
    "apollo-utilities": "^1.3.2",
    "axios": "^0.19.0",
    "bufferutil": "^4.0.1",
    "bytes": "^3.1.0",
    "encoding": "^0.1.12",
    "got": "^9.6.0",
    "graphql": "^14.5.8",
    "http-errors": "^1.7.3",
    "localforage": "^1.7.3",
    "lru-cache": "^5.1.1",
    "nanoid": "^2.1.6",
    "polished": "^3.4.2",
    "prop-types": "^15.7.2",
    "qs": "^6.9.1",
    "raf-schd": "^4.0.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-spring": "^8.0.27",
    "strman": "^2.0.1",
    "styled-components": "^4.4.1",
    "universal-cookie": "^4.0.2",
    "utf-8-validate": "^5.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-typescript": "^7.7.2",
    "@cypress/webpack-preprocessor": "^4.1.1",
    "@testing-library/cypress": "^5.0.2",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@types/aws-lambda": "^8.10.35",
    "@types/bytes": "^3.1.0",
    "@types/got": "^9.6.9",
    "@types/http-errors": "^1.6.1",
    "@types/jest": "24.0.23",
    "@types/lru-cache": "^5.1.0",
    "@types/nanoid": "^2.1.0",
    "@types/nock": "^11.1.0",
    "@types/node": "12.12.7",
    "@types/qs": "^6.9.0",
    "@types/raf-schd": "^4.0.0",
    "@types/reach__combobox": "^0.1.0",
    "@types/reach__tooltip": "^0.2.0",
    "@types/react": "16.9.11",
    "@types/react-dom": "16.9.4",
    "@types/react-router-dom": "^5.1.2",
    "@types/styled-components": "^4.4.0",
    "@types/testing-library__cypress": "^5.0.1",
    "@types/universal-cookie": "^2.2.0",
    "concurrently": "^5.0.0",
    "cypress": "^3.6.1",
    "cz-conventional-changelog": "^3.0.2",
    "dotenv-webpack": "^1.7.0",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.3",
    "netlify-lambda": "^1.6.0",
    "nock": "^11.7.0",
    "prettier": "^1.19.1",
    "react-scripts": "3.2.0",
    "start-server-and-test": "^1.10.6",
    "ts-loader": "^6.2.1",
    "typescript": "3.7.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,ts,jsx,tsx,json,md,yml,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  }
}
