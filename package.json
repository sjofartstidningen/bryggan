{
  "name": "bryggan",
  "version": "1.1.2",
  "license": "MIT",
  "author": "Adam Bergman <adam@fransvilhelm.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/sjofartstidningen/bryggan.git"
  },
  "homepage": "https://bryggan.sjofartstidningen.se",
  "private": true,
  "scripts": {
    "prestart": "tailwind build ./src/index.tailwind.css -o ./src/index.css",
    "start": "react-scripts start",
    "prebuild": "tailwind build ./src/index.tailwind.css -o ./src/index.css",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "tailwindcss": "^1.0.1",
    "typescript": "3.4.5"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "12.0.2",
    "@types/react": "16.8.17",
    "@types/react-dom": "16.8.4",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^2.3.0",
    "jest-dom": "^3.2.2",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "react-testing-library": "^7.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "*.{js,ts,jsx,tsx,json,md,yml,html}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  }
}
