{
  "name": "foo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "concurrently 'yarn start:app' 'yarn start:lambda'",
    "start:app": "react-scripts start",
    "start:lambda": "netlify-lambda serve --config webpack.functions.js src/functions",
    "build": "yarn build:app && yarn build:lambda",
    "build:app": "react-scripts build",
    "build:lambda": "netlify-lambda build src/functions",
    "test": "react-scripts test",
    "lint": "eslint --ext .ts --ext .tsx --ext .js src cypress",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:ci": "start-server-and-test 'yarn start' :3000 'yarn cypress:run'"
  },
  "dependencies": {
    "@fransvilhelm/hooks": "^1.1.0",
    "@reach/combobox": "^0.1.1",
    "@reach/router": "^1.2.1",
    "@xstate/react": "^0.7.0",
    "axios": "^0.19.0",
    "http-errors": "^1.7.3",
    "localforage": "^1.7.3",
    "nanoid": "^2.1.1",
    "polished": "^3.4.1",
    "prop-types": "^15.7.2",
    "qs": "^6.8.0",
    "raf-schd": "^4.0.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "styled-components": "^4.3.2",
    "universal-cookie": "^4.0.2",
    "xstate": "^4.6.7"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@cypress/webpack-preprocessor": "^4.1.0",
    "@testing-library/cypress": "^5.0.0",
    "@testing-library/jest-dom": "^4.0.1",
    "@testing-library/react": "^9.1.3",
    "@types/aws-lambda": "^8.10.31",
    "@types/http-errors": "^1.6.1",
    "@types/jest": "24.0.17",
    "@types/nanoid": "^2.0.0",
    "@types/nock": "^10.0.3",
    "@types/node": "12.7.2",
    "@types/qs": "^6.5.3",
    "@types/raf-schd": "^4.0.0",
    "@types/reach__combobox": "^0.1.0",
    "@types/reach__router": "^1.2.4",
    "@types/react": "16.9.2",
    "@types/react-dom": "16.8.5",
    "@types/styled-components": "^4.1.18",
    "@types/testing-library__cypress": "^4.2.0",
    "@types/universal-cookie": "^2.2.0",
    "concurrently": "^4.1.2",
    "cypress": "^3.4.1",
    "cz-conventional-changelog": "^3.0.2",
    "dotenv-webpack": "^1.7.0",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "netlify-lambda": "^1.6.0",
    "nock": "^10.0.6",
    "prettier": "^1.18.2",
    "react-scripts": "3.1.1",
    "start-server-and-test": "^1.10.0",
    "ts-loader": "^6.1.0",
    "typescript": "3.5.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,ts,jsx,tsx,json,md,yml,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  }
}
